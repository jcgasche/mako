<li id="instruction_<%= instruction.id %>">
    <div class="timeline-badge info"><i class="fa fa-graduation-cap"></i>
    </div>
    <div class="timeline-panel">
        <div class="timeline-heading">
            <h4 class="timeline-title">Instruction <%= instruction.id %></h4>
        </div>
        <div class="timeline-body">
            <% if !instruction.text.blank? %>
                <p><%= instruction.text %></p>
            <% end %>
            <% if !instruction.image_url.blank? %>
                <img src="<%= instruction.image_url %>">
            <% end %>
            <% if !instruction.video_url.blank? %>
                <p>Play video at <%= instruction.video_url %></p>
            <% end %>
            <hr>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-gear"></i>  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Edit", edit_instruction_path(instruction) %>
                    </li>
                    <li><%= link_to "Add answer", new_instruction_answer_path(instruction), remote: true %>
                    </li>
                    <li class="divider"></li>
                    <li><%= link_to "Delete", instruction_path(instruction), method: :delete, remote: true %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</li>