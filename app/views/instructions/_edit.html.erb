<li id="instruction_<%= instruction.id %>">
    <div class="timeline-badge info"><i class="fa fa-graduation-cap"></i>
    </div>
    <div class="timeline-panel">
        <div class="timeline-heading">
            <h4 class="timeline-title">Instruction <%= instruction.id %></h4>
        </div>
        <div class="timeline-body">
            <%= form_for @instruction, remote: true do |f| %>
                <div class="form-group">
                    <%= f.label :text, class: "control-label" %>
                    <%= f.text_field :text, class: "form-control"  %>
                    <p class="help-block text-muted small">Try to stay below 5 words!</p>
                </div>
                <div class="form-group">
                    <%= f.label :image_url, class: "control-label" %>
                    <%= f.text_field :image_url, class: "form-control"  %>
                    <p class="help-block text-muted small">Or add an image here to stay funky.</p>
                </div>
                <div class="form-group">
                    <%= f.label :video_url, class: "control-label" %>
                    <%= f.text_field :video_url, class: "form-control"  %>
                    <p class="help-block text-muted small">Or add an image here to stay funky.</p>
                </div>

                <div class="form-group">
                    <%= f.submit 'Save', class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</li>