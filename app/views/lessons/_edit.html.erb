



<!-- /.panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-clock-o fa-fw"></i> Lesson Timeline
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <ul class="timeline">


                	<% @lesson.instructions.each do |instruction| %>
                		<%= render partial: "instructions/edit", locals:{ instruction: instruction } %>
                		<% instruction.answers.each do |answer| %>
                			<%= render partial: "answers/edit", locals:{ answer: answer } %>
                		<% end %>
                	<% end %>

                    <%= render partial: "instructions/new" %>

                </ul>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->